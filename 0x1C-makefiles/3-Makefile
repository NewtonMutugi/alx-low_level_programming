CC = gcc # the compiler to be used
SRC = main.c school.c # the .c files
OBJ = $(SRC:.c=.o) # The object file
NAME = school # the name of the executable
RM = rm # the program to delete files

all: $(OBJ) #  builds your executable
	$(CC) $(OBJ) -o $(NAME)

clean: # deletes all Emacs and Vim temporary files along with the executable
	$(RM) -f *~ $(NAME)

oclean: # deletes the object files
	$(RM) -f $(OBJ)

fclean: clean oclean # deletes all Emacs and Vim temporary files, the executable, and the object files

re: fclean all # forces recompilation of all source files
